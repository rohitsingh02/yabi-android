<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/crazy_white"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topContainer"
        android:background="@color/crazy_blue">
        <ImageView
            android:layout_width="match_parent"
            android:background="@color/crazy_blue"
            android:layout_height="100dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelDialog"
            android:text="Cancel"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mediumContainer"
        android:background="@color/crazy_white"
        android:layout_below="@+id/topContainer"
        android:layout_above="@+id/bottomContainer"
        android:orientation="vertical"
        android:padding="5dp">


        <TextView
            android:id="@+id/tvTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margins_10"
            android:background="@color/transparent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Welcome!!"
            android:textSize="@dimen/margins_25"
            android:textColor="@color/crazy_blue"
            />

        <TextView
            android:id="@+id/tvMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margins_10"
            android:background="@color/transparent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="We also provide yabi chat service"
            android:textSize="20sp"
            android:textColor="@color/crazy_blue"
            />


        <TextView
            android:id="@+id/tvBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margins_10"
            android:background="@color/transparent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="In order to avail the functionality\n press the button below"
            android:textSize="18sp"
            android:textColor="@color/dark_gray"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomContainer"
        android:background="@color/transparent"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/enableWidget"
            android:layout_width="match_parent"
            android:text="Enable Yabi Widget"
            android:background="@color/light_gray"
            android:layout_height="50dp"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>
