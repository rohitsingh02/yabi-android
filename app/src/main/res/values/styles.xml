<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/secondary_color</item>
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="colorPrimary">@color/default_transparent_color</item>

        <!-- colorPrimaryDark is used for the status bar (with the
                 battery, clock, etc). -->
        <item name="colorPrimaryDark">@color/secondary_color</item>

        <!-- colorAccent is used as the default value for
                 colorControlActivated which is used to tint widgets. -->
        <item name="colorAccent">@color/primary_color</item>


        <!-- CAB :D -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="StyledIndicators" parent="@style/AppTheme">
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

    </style>

    <style name="ToolbarColoredBackArrowDark" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/background_dark</item>
        <item name="colorControlNormal">@android:color/background_dark</item>

    </style>


    <style name="CustomCirclePageIndicator">
        <item name="fillColor">#FFFFFFFF</item>
        <item name="strokeColor">@android:color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">6dp</item>
        <item name="centered">true</item>
    </style>

    <!-- Ui Utils -->
    <attr name="fontName" format="string" />
    <declare-styleable name="CustomFontTV">
        <attr name="fontName" />
    </declare-styleable>

    <declare-styleable name="CustomFontET">
        <attr name="fontName" />
    </declare-styleable>

    <declare-styleable name="CustomFontBTN">
        <attr name="fontName" />
    </declare-styleable>

    <declare-styleable name="CustomFontRadioBTN">
        <attr name="fontName" />
    </declare-styleable>

    <declare-styleable name="CustomSpacingTV">
        <attr name="fontName" />
        <attr name="fontText" format="string" />
        <attr name="fontSpacing" format="float" />
    </declare-styleable>

    <style name="SplashScreenToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- android:textColorPrimary is the  color of the title text
                 in the Toolbar, in the Theme.AppCompat theme:  -->
        <item name="android:textColorPrimary">@color/color_primary_text</item>

        <!-- android:textColorPrimaryInverse is the  color of the title
                 text in the Toolbar, in the Theme.AppCompat.Light theme:  -->
        <!-- <item name="android:textColorPrimaryInverse">@color/abc_primary_text_material_light</item> -->

        <!-- android:actionMenuTextColor is the color of the text of
                  action (menu) items in the Toolbar, at least in the
                  Theme.AppCompat theme.
                  For some reason, they already get the textColorPrimary
                  when running on API 21, but not on older versions of
                  Android, so this is only necessary to support older
                  Android versions.-->
        <item name="actionMenuTextColor">@color/color_primary_text</item>
        <!-- android:textColorSecondary is the color of the menu
                 overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/color_primary_text</item>

        <!-- This would set the toolbar's background color,
                  but setting this also changes the popup menu's background,
                  even if we define popupTheme for our <Toolbar> -->
        <!-- <item name="android:background">@color/color_primary</item> -->
    </style>
    <!-- Location Activity Theme -->
    <style name="LocationTheme" parent="Base.Theme.AppCompat">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="colorPrimary">@color/primary_color</item>

        <!-- colorPrimaryDark is used for the status bar (with the
                 battery, clock, etc). -->
        <item name="colorPrimaryDark">@color/secondary_color</item>

        <!-- colorAccent is used as the default value for
                 colorControlActivated which is used to tint widgets. -->
        <item name="colorAccent">@color/primary_color</item>


        <!-- CAB :D -->
        <item name="windowActionModeOverlay">true</item>
    </style>
    <!-- Menu Screen Theme -->
    <style name="HomeTheme" parent="AppTheme.NoActionBar">
        <!--<item name="android:windowBackground">@android:color/white</item>-->
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="colorPrimary">@color/primary_color</item>

        <!-- colorPrimaryDark is used for the status bar (with the
                 battery, clock, etc). -->
        <item name="colorPrimaryDark">@color/secondary_color</item>


        <!-- colorAccent is used as the default value for
                 colorControlActivated which is used to tint widgets. -->
        <item name="colorAccent">@color/md_blue_500</item>
        <item name="android:alertDialogStyle">@style/dialog</item>
        <item name="android:actionMenuTextColor">@color/primary_color</item>

    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <!--  <item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>


    <style name="MealsListingPositiveNegativeButton">
        <!-- Customize your theme here. -->
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="dialog" parent="AlertDialog.AppCompat.Light">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="MobikwikTheme" parent="Base.Theme.AppCompat">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="colorPrimary">@color/mobikwik</item>

        <!-- colorPrimaryDark is used for the status bar (with the
                 battery, clock, etc). -->
        <item name="colorPrimaryDark">@color/secondary_color</item>

        <!-- colorAccent is used as the default value for
                 colorControlActivated which is used to tint widgets. -->
        <item name="colorAccent">@color/mobikwik</item>
        <item name="android:alertDialogStyle">@style/dialog</item>
        <item name="android:actionMenuTextColor">@color/mobikwik</item>
        <item name="actionMenuTextColor">@color/mobikwik</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/mobikwik</item>
    </style>


    <!-- Base application theme. -->
    <style name="GuideTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/secondary_color</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="GuideTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="GuideTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




    <style name="AppTheme.CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#FFFFFF</item>>
        <item name="android:windowBackground">@drawable/popup_bg</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>


</resources>
